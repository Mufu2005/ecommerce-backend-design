
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <!-- Hero Section -->
    <div class="p-5 mb-4 bg-primary text-white rounded-4 shadow-sm text-center">
        <h1 class="fw-bold">Latest Trending Electronic Items</h1>
        <p>Find headphones, smartwatches, cameras, and more at the best prices.</p>
        <a href="#" class="btn btn-light px-4 py-2">Shop Now</a>
    </div>

    <!-- Category Section -->
    <h2 class="fw-semibold mb-4">Shop by Category</h2>
    <div class="row text-center">
        <div class="col-6 col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <img src="/images/headphones.jpg" class="card-img-top" alt="Headphones">
                <div class="card-body"><h6>Headphones</h6></div>
            </div>
        </div>
        <div class="col-6 col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <img src="/images/phones.jpg" class="card-img-top" alt="Phones">
                <div class="card-body"><h6>Smartphones</h6></div>
            </div>
        </div>
        <div class="col-6 col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <img src="/images/cameras.jpg" class="card-img-top" alt="Cameras">
                <div class="card-body"><h6>Cameras</h6></div>
            </div>
        </div>
        <div class="col-6 col-md-3 mb-4">
            <div class="card shadow-sm border-0">
                <img src="/images/watches.jpg" class="card-img-top" alt="Watches">
                <div class="card-body"><h6>Watches</h6></div>
            </div>
        </div>
    </div>

    <!-- Featured Products -->
    <h2 class="fw-semibold mb-4">Featured Products</h2>
    <div class="row">
        @for (int i = 1; i <= 8; i++)
        {
            <div class="col-6 col-md-3 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="/css/product.png" class="card-img-top" alt="Product @(i)">
                    <div class="card-body text-center">
                        <h6 class="card-title">Product @(i)</h6>
                        <p class="text-muted mb-2">$@(50 + i * 10)</p>
                        <a href="/Home/Product" class="btn btn-outline-primary btn-sm">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
