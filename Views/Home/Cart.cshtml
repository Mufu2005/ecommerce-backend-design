@{
    ViewData["Title"] = "Your Cart";
}

<div class="container py-5">
    <h2 class="fw-semibold mb-4">Your Shopping Cart</h2>

    <div class="table-responsive shadow-sm rounded-3">
        <table class="table align-middle">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Total</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="d-flex align-items-center">
                        <img src="/images/product1.jpg" alt="Product 1" class="rounded me-3" width="70" height="70">
                        <div>
                            <h6 class="mb-0">Wireless Headphones</h6>
                            <small class="text-muted">Electronics</small>
                        </div>
                    </td>
                    <td>$120</td>
                    <td><input type="number" value="1" class="form-control w-50" /></td>
                    <td>$120</td>
                    <td><button class="btn btn-sm btn-outline-danger">Remove</button></td>
                </tr>

                <tr>
                    <td class="d-flex align-items-center">
                        <img src="/images/product2.jpg" alt="Product 2" class="rounded me-3" width="70" height="70">
                        <div>
                            <h6 class="mb-0">Smart Watch</h6>
                            <small class="text-muted">Wearables</small>
                        </div>
                    </td>
                    <td>$90</td>
                    <td><input type="number" value="2" class="form-control w-50" /></td>
                    <td>$180</td>
                    <td><button class="btn btn-sm btn-outline-danger">Remove</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-end mt-4">
        <h5>Subtotal: <span class="text-primary">$300</span></h5>
        <a href="#" class="btn btn-success px-4 py-2 mt-3">Proceed to Checkout</a>
    </div>
</div>
