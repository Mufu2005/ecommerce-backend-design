                            <div class="d-flex gap-2 mt-3">
                                <button class="btn btn-light btn-sm border text-danger border-danger-subtle">Remove</button>
                                <button class="btn btn-light btn-sm border text-primary border-primary-subtle">Save for later</button>
                            </div>
