@model ShopHub.Models.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="mb-0 fw-bold">Add New Product</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">Product Name</label>
                                <input asp-for="Name" class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Price ($)</label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Category</label>
                                <select asp-for="Category" class="form-select">
                                    <option>Electronics</option>
                                    <option>Clothing</option>
                                    <option>Home</option>
                                    <option>Automobiles</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Image URL</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                                <div class="form-text">For this task, paste a link to an image (e.g. from Google Images).</div>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Short Description</label>
                                <input asp-for="ShortDescription" class="form-control" placeholder="Shown in grid view" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Full Description</label>
                                <textarea asp-for="FullDescription" class="form-control" rows="4"></textarea>
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-primary px-5">Save Product</button>
                                <a asp-action="Index" class="btn btn-light border ms-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>