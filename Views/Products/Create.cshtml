@model ShopHub.Models.ProductViewModel

@{
    ViewData["Title"] = "Add New Product";
}

<div class="container py-5">
    <h2>Add New Product</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Price</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Category</label>
                        <select asp-for="Category" class="form-select">
                            <option>Electronics</option>
                            <option>Clothing</option>
                            <option>Home</option>
                            <option>Tools</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="ShortDescription" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="InStock" checked>
                    <label class="form-check-label">In Stock</label>
                </div>

                <button type="submit" class="btn btn-primary">Save Product</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>