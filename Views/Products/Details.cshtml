@model ShopHub.Models.ProductViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="bg-brand-gray-bg py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 small">
                <li class="breadcrumb-item"><a href="/" class="text-muted">Home</a></li>
                <li class="breadcrumb-item"><a href="/Products" class="text-muted">Shop</a></li>
                <li class="breadcrumb-item active" aria-current="page text-truncate">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container bg-white border rounded p-4 mt-3">
    <div class="row">
        <aside class="col-lg-5">
            <div class="border rounded p-3 mb-3 d-flex justify-content-center align-items-center" style="height: 400px; background: #fff;">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/500" : Model.ImageUrl)" class="img-fluid" style="max-height: 100%; object-fit: contain;" alt="@Model.Name">
            </div>
            <div class="d-flex gap-2 justify-content-center">
                <div class="border rounded p-1" style="width: 60px; height: 60px;"><img src="https://via.placeholder.com/60" class="img-fluid"></div>
                <div class="border rounded p-1" style="width: 60px; height: 60px;"><img src="https://via.placeholder.com/60" class="img-fluid"></div>
                <div class="border rounded p-1" style="width: 60px; height: 60px;"><img src="https://via.placeholder.com/60" class="img-fluid"></div>
            </div>
        </aside>

        <main class="col-lg-7">
            <div class="ps-lg-4">
                @if (Model.InStock)
                {
                    <span class="text-success small fw-bold"><i class="bi bi-check2"></i> In stock</span>
                }
                <h2 class="title text-dark mt-2" style="height: auto; -webkit-line-clamp: unset;">@Model.Name</h2>

                <div class="d-flex align-items-center mb-3">
                    <div class="rating-stars me-2">
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i < Math.Floor(Model.Rating))
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else
                            {

                                <i class="bi bi-star-fill text-muted opacity-25"></i>
                            }
                        }
                    </div>
                    <span class="text-muted small"><i class="bi bi-dot"></i> @Model.ReviewsCount reviews <i class="bi bi-dot"></i> 154 sold</span>
                </div>

                <div class="d-flex align-items-center bg-light p-3 rounded mb-4">
                    <div class="me-4">
                        <span class="h3 text-danger fw-bold mb-0">$@Model.Price.ToString("0.00")</span>
                        <span class="small text-muted d-block">50-100 pcs</span>
                    </div>
                    <div class="border-start ps-4 me-4">
                        <span class="h5 fw-bold mb-0">$90.00</span>
                        <span class="small text-muted d-block">100-700 pcs</span>
                    </div>
                </div>

                <table class="table table-borderless table-sm small mb-4 text-muted" style="max-width: 400px;">
                    <tr>
                        <td width="120">Price:</td>
                        <td class="text-dark">Negotiable</td>
                    </tr>
                    <tr>
                        <td>Type:</td>
                        <td class="text-dark">Classic shoes</td>
                    </tr>
                    <tr>
                        <td>Material:</td>
                        <td class="text-dark">Plastic material</td>
                    </tr>
                    <tr>
                        <td>Design:</td>
                        <td class="text-dark">Modern nice</td>
                    </tr>
                </table>

                <hr />

                <div class="d-flex gap-3 mt-4">
                    <button class="btn btn-primary btn-lg px-4">Send inquiry</button>
                    <button class="btn btn-outline-secondary btn-lg px-4"><i class="bi bi-heart"></i> Save for later</button>
                </div>

            </div>
        </main>

    </div>
</div>

<div class="container mt-4">
    <div class="bg-white border rounded shadow-sm">
        <div class="card-header bg-white border-bottom p-0">
            <ul class="nav nav-tabs nav-fill border-bottom-0" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active fw-bold py-3" id="desc-tab" data-bs-toggle="tab" data-bs-target="#desc-tab-pane" type="button" role="tab">Description</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link fw-bold py-3 text-muted" id="review-tab" data-bs-toggle="tab" data-bs-target="#review-tab-pane" type="button" role="tab">Reviews (32)</button>
                </li>
            </ul>
        </div>
        <div class="card-body p-4 text-muted">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="desc-tab-pane" role="tabpanel">
                    @Html.Raw(Model.FullDescription)
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                    <ul class="list-unstyled mt-3">
                        <li><i class="bi bi-check2 text-success me-2"></i> Some great feature name here</li>
                        <li><i class="bi bi-check2 text-success me-2"></i> Lorem ipsum dolor sit amet, consectetur</li>
                        <li><i class="bi bi-check2 text-success me-2"></i> Duis aute irure dolor in reprehenderit</li>
                    </ul>
                </div>
                <div class="tab-pane fade" id="review-tab-pane" role="tabpanel">Reviews content here...</div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5 mb-5">
    <h4 class="fw-bold mb-4">Related products</h4>
    <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-3">
        <div class="col">
            <div class="card h-100 border">
                <img src="https://via.placeholder.com/150" class="card-img-top p-3" alt="...">
                <div class="card-body p-3 border-top">
                    <h6 class="card-title text-truncate">Xiaomi Redmi 8 Original</h6>
                    <div class="text-muted small">$32.00-$40.00</div>
                </div>
            </div>
        </div>
    </div>
</div>