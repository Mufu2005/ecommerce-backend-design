<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brand eCommerce</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="main-header">
        <div class="container top-bar d-flex align-items-center justify-content-between flex-wrap gap-3">
            <a class="navbar-brand fw-bold fs-4 text-brand-blue me-4" href="/">
                <i class="bi bi-bag-fill me-2"></i>Brand
            </a>

            <form class="flex-grow-1 d-flex search-group" action="/Products" method="get" style="max-width: 600px;">
                <div class="input-group">
                    <select class="form-select bg-light">
                        <option selected>All category</option>
                        <option>Electronics</option>
                        <option>Clothes</option>
                    </select>
                    <input type="text" class="form-control border-start-0 border-end-0" placeholder="Search products..." name="searchQuery">
                    <button class="btn btn-primary px-4" type="submit">Search</button>
                </div>
            </form>

            <div class="d-flex gap-3 ms-auto">
                <a href="#" class="nav-icon-link"><i class="bi bi-person-fill"></i> Profile</a>
                <a href="#" class="nav-icon-link"><i class="bi bi-chat-dots-fill"></i> Message</a>
                <a href="#" class="nav-icon-link"><i class="bi bi-heart-fill"></i> Orders</a>
                <a href="#" class="nav-icon-link"><i class="bi bi-cart-fill"></i> My cart</a>
            </div>
        </div>

        <div class="bottom-bar">
            <div class="container d-flex align-items-center justify-content-between flex-wrap">
                <ul class="nav category-nav me-auto">
                    <li class="nav-item"><a class="nav-link ps-0" href="#"><i class="bi bi-list me-1"></i> All category</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Hot offers</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Gift boxes</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Projects</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Menu item</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Help</a>
                        <ul class="dropdown-menu"><li><a class="dropdown-item" href="#">Docs</a></li></ul>
                    </li>
                </ul>
                <div class="d-flex gap-3 text-muted small">
                    <div class="dropdown">
                        <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown">English, USD</a>
                    </div>
                    <div class="dropdown">
                        <a class="dropdown-toggle text-muted" href="#" data-bs-toggle="dropdown">Ship to 🇩🇪</a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <section class="newsletter-area text-center">
        <div class="container">
            <h4 class="fw-bold">Subscribe on our newsletter</h4>
            <p class="text-muted">Get daily news on upcoming offers from many suppliers all over the world</p>
            <form class="d-flex justify-content-center gap-2 mt-4" style="max-width: 400px; margin: auto;">
                <div class="input-group mb-3">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control border-start-0" placeholder="Email">
                    <button class="btn btn-primary px-4" type="button">Subscribe</button>
                </div>
            </form>
        </div>
    </section>

    <footer class="bg-white pt-5">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <a class="navbar-brand fw-bold fs-4 text-brand-blue mb-3 d-block" href="#">
                        <i class="bi bi-bag-fill me-2"></i>Brand
                    </a>
                    <p class="text-muted small">Best information about the company gies here but now lorem ipsum is</p>
                    <div class="d-flex gap-2">
                        <a href="#" class="text-muted"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-muted"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-muted"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-muted"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <h6 class="fw-bold mb-3">About</h6>
                    <ul class="list-unstyled text-muted small d-flex flex-column gap-2">
                        <li><a href="#" class="text-muted">About Us</a></li>
                        <li><a href="#" class="text-muted">Find store</a></li>
                        <li><a href="#" class="text-muted">Categories</a></li>
                        <li><a href="#" class="text-muted">Blogs</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <h6 class="fw-bold mb-3">Partnership</h6>
                </div>
                <div class="col-lg-2 col-md-3 col-6">
                    <h6 class="fw-bold mb-3">Information</h6>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold mb-3">Get app</h6>
                    <div class="d-flex flex-column gap-2">
                        <button class="btn btn-dark btn-sm text-start"><i class="bi bi-apple me-2"></i> App Store</button>
                        <button class="btn btn-dark btn-sm text-start"><i class="bi bi-google-play me-2"></i> Google Play</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom text-center">
            <div class="container d-flex justify-content-between align-items-center">
                <p class="mb-0 small">&copy; 2025 Ecommerce.</p>
                <div class="dropdown dropup">
                    <a class="dropdown-toggle text-muted small" href="#" data-bs-toggle="dropdown">🇺🇸 English</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>